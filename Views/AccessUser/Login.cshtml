
@{
    ViewData["Title"] = "Login";
}

<form asp-action="Valida_Login" asp-controller="AccessUser">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label >Login</label>
            <input type="text" class="form-control" id="login" name="login" placeholder="Usuário deve ser 1,2,3">
        </div>
        <div class="form-group col-md-6">
            <label>Password</label>
            <input type="password" class="form-control" id="senha" name="senha" placeholder="Senha deve ser 1,2,3">
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary">Autenticar</button>
</form>

